<% if @user %>
  <p>Logged in as <%= @user.name %></p>
<% else %>
  <% flash.each do |type, msg| %>
    <p style="color: pink"><%= msg %></p>
  <% end %>

  <h1>Welcome</h1>
  <p></p>
  <%= form_with url: authenticate_path, method: :post, data: {turbo: false} do |form| %>
    <div class="mb-3 row">
      <%= form.label :email, class: "col-lg-1 col-form-label" %>
      <div class="col-lg-3">
        <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= form.label :password, class: "col-lg-1 col-form-label" %>
      <div class="col-lg-3">
        <%= form.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="col-auto">
      <%= form.submit "Login", class: "btn btn-primary mb-3" %>
    </div>
  <% end %>
<% end %>
